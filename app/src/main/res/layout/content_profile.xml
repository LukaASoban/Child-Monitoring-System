<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/tan"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="bigbrother.child_monitoring_system.Profile"
    tools:showIn="@layout/activity_profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/title"
        android:layout_alignParentTop="true" />

    <TextView
        android:text="Email:"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastName"
        android:layout_alignLeft="@+id/lastName"
        android:layout_alignStart="@+id/lastName"
        android:layout_alignEnd="@+id/lastName"
        android:layout_marginTop="10dp"
        android:id="@+id/email" />

    <TextView
        android:text="Password:"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:layout_alignRight="@+id/email"
        android:layout_alignEnd="@+id/email"
        android:layout_marginTop="10dp"
        android:id="@+id/password" />

    <TextView
        android:text="Child Last Name:"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/childFirstName"
        android:layout_alignRight="@+id/childFirstName"
        android:layout_alignEnd="@+id/childFirstName"
        android:layout_marginTop="10dp"
        android:id="@+id/childLastName" />

    <TextView
        android:text="School Name:"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/childLastName"
        android:layout_alignLeft="@+id/childLastName"
        android:layout_alignStart="@+id/childLastName"
        android:layout_marginTop="10dp"
        android:id="@+id/SchoolName" />


    <TextView
        android:text="Last Name:"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/firstName"
        android:id="@+id/lastName"
        android:layout_marginTop="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Child First Name:"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/childFirstName"
        android:layout_below="@+id/password"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/firstName"
        android:layout_toRightOf="@+id/firstName"
        android:layout_toEndOf="@+id/firstName"
        android:id="@+id/firstNameData" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/lastName"
        android:layout_toRightOf="@+id/lastName"
        android:layout_toEndOf="@+id/lastName"
        android:id="@+id/lastNameData" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/email"
        android:layout_toRightOf="@+id/email"
        android:layout_toEndOf="@+id/email"
        android:id="@+id/emailData" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/password"
        android:layout_toRightOf="@+id/password"
        android:layout_toEndOf="@+id/password"
        android:id="@+id/passwordData" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/childFirstName"
        android:layout_toRightOf="@+id/childFirstName"
        android:layout_toEndOf="@+id/childFirstName"
        android:id="@+id/childLastNameData" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/childLastName"
        android:layout_toRightOf="@+id/childLastName"
        android:layout_toEndOf="@+id/childLastName"
        android:id="@+id/childFirstNameData" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/SchoolName"
        android:layout_toEndOf="@+id/SchoolName"
        android:layout_alignTop="@+id/SchoolName"
        android:id="@+id/schoolNameData" />

    <Button
        android:text="Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_widthPercent="60%"
        app:layout_heightPercent="10%"
        android:layout_below="@+id/schoolNameData"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textSize="24dp"
        android:textColor="@color/tan"
        android:background="@drawable/button_rounded"
        android:padding="10dp"
        android:layout_marginTop="43dp"
        android:id="@+id/button2" />

    <Button
        android:text="Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_rounded"
        android:textAllCaps="false"
        app:layout_widthPercent="60%"
        app:layout_heightPercent="10%"
        android:textColor="@color/tan"
        android:textSize="24dp"
        android:padding="10dp"
        android:id="@+id/button3"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="First Name:"
        android:id="@+id/firstName"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
