<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan"
    android:fitsSystemWindows="true">

    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="bigbrother.child_monitoring_system.Registration"
        android:background="@color/tan">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="8%"
            android:inputType="textPersonName"
            android:id="@+id/firstName"
            android:hint="First Name"
            android:textColor="@color/gray"
            android:textColorLink="@color/gray"
            android:padding="10dp"
            android:background="@drawable/textbox"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <!--Last Name-->
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="8%"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/lastName"
            android:hint="Last Name"
            android:layout_below="@+id/firstName"
            android:textColor="@color/gray"
            android:textColorLink="@color/gray"
            android:padding="10dp"
            app:layout_marginTopPercent="2%"
            android:layout_centerHorizontal="true"
            android:background="@drawable/textbox"/>

        <Spinner
            android:id="@+id/school_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="8%"
            android:layout_alignLeft="@+id/email"
            android:layout_alignStart="@+id/email"
            android:hint="School Name"
            android:layout_below="@+id/lastName"
            android:textColor="@color/gray"
            android:textColorLink="@color/gray"
            android:padding="10dp"
            app:layout_marginTopPercent="2%"
            android:background="@drawable/textbox" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="8%"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/email"
            android:hint="Email"
            android:layout_below="@+id/school_name"
            android:textColor="@color/gray"
            android:textColorLink="@color/gray"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="2%"
            android:background="@drawable/textbox" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="8%"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:hint="Password"
            android:layout_below="@+id/email"
            android:textColor="@color/gray"
            android:textColorLink="@color/gray"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="2%"
            android:background="@drawable/textbox" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_widthPercent="80%"
            app:layout_heightPercent="8%"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/conf_password"
            android:hint="Confirm Password"
            android:layout_below="@+id/password"
            android:textColor="@color/gray"
            android:textColorLink="@color/gray"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            app:layout_marginTopPercent="2%"
            android:background="@drawable/textbox" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_widthPercent="60%"
            app:layout_heightPercent="10%"
            android:text="Register"
            android:id="@+id/register"
            android:textAllCaps="false"
            android:textColor="@color/tan"
            android:padding="10dp"
            android:textSize="24dp"
            android:background="@drawable/button_rounded"
            app:layout_marginTopPercent="2%"
            android:layout_below="@+id/conf_password"
            android:layout_centerHorizontal="true"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cancel_registration"
            app:layout_widthPercent="60%"
            app:layout_heightPercent="10%"
            android:background="@drawable/button_rounded"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@color/tan"
            android:textSize="24dp"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/register"
            app:layout_marginTopPercent="2%"/>


    </android.support.percent.PercentRelativeLayout>
</ScrollView>